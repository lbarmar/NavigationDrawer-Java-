<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_transparent"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/guideLayout"
    android:visibility="gone">

    <ImageView
        android:id="@+id/pulseImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="-80dp"
        android:layout_marginTop="-70dp"
        android:src="@drawable/pulse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textStep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="En este menú encontrarás las diferentes vistas de la app"
        android:background="@drawable/button_normal"
        android:layout_margin="50dp"
        android:gravity="center"
        android:maxLines="5"
        android:padding="20dp"
        android:textSize="26sp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:alpha="0"/>

    <android.widget.Button
        android:id="@+id/exit_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saltar guía"
        android:layout_gravity="right|bottom"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:textColor="@color/blue"/>


</FrameLayout>